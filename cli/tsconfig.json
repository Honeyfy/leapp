{
  "compilerOptions": {
    "rootDir": "src",
    "downlevelIteration": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "importHelpers": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "types": ["node", "jest"],
    "lib": ["ES2017", "DOM"],
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "env",
    "**/dist/**",
    "dev",
    "spec"
  ]
}
