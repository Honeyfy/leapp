{
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2018",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "coverage",
    "node_modules",
    "env",
    "**/dist/**",
    "dev",
    "spec"
  ]
}
